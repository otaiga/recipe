<div class="container">
<div class="row">
  <div class="span12">
<h1>My Recipes</h1>

<table>
  <tr>
    <th>Name Of Dish</th>
    <th>Country Of Origin</th>
    <th>Difficulty</th>
    <th>Preperation Time</th>
    <th>ingredient</th>
    <th>Preperation</th>
    <th>Image</th>
    <th>Delete</th>
    <th>Edit</th>
    <th>Fav</th>
  </tr>

  <% @recipes.each do |r| %>
  <tr>
    <td><%= r.dish_name %></td>
    <td><%= r.country_of_origin %></td>
    <td><%= r.difficulty %></td>
    <td><%= r.preperation_time %></td>
    <td><%= ingredient_names(r.ingredients) %></td>
    <td><%= preperation_steps(r.preperations) %></td>
    <td><%= image_tag r.avatar.url(:thumb)%></td>
    
    <td><%= link_to "Delete Recipe", recipe_path(r.id), :confirm => "Are you sure?", :method => :delete %></td>
    <td><%= link_to "Edit Recipe", edit_recipe_path(r.id) %></td>
     <td><%= link_to "Add to favorites",  {:controller => 'favourites', :action => 'create', :recipe_id => r.id}, {:method => :post } %></td>
 </tr>

  <% end %>
</table>

<li><%= link_to "Create New Recipe", new_recipe_path %></li>

<h2>My Favourite Recipes</h2>

    <table>
  <tr>
    <th>Name Of Dish</th>
    <th>Country Of Origin</th>
    <th>Difficulty</th>
    <th>Preperation Time</th>
    <th>ingredient</th>
    <th>Preperation</th>
    <th>Image</th>
  </tr>

  <% @favourites.each do |f| %>
  <tr>
    <td><%= f.recipe.dish_name %></td>
    <td><%= f.recipe.country_of_origin %></td>
    <td><%= f.recipe.difficulty %></td>
    <td><%= f.recipe.preperation_time %></td>
    <td><%= ingredient_names(f.recipe.ingredients) %></td>
    <td><%= preperation_steps(f.recipe.preperations) %></td>
    <td><%= image_tag f.recipe.avatar.url(:thumb)%></td>
 </tr>

  <% end %>
</table>


 
</div>
</div>
</div>