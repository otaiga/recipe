
<%= render 'shared/searchrecipes' %>
  <div id ="searchres"></div>


<h1>Results</h1>

<table>
  <tr>
    <th>Name Of Dish</th>
    <th>Country Of Origin</th>
    <th>Difficulty</th>
    <th>Preperation Time</th>
    <th>ingredient</th>
    <th>Preperation</th>
    <th>Image</th>
  </tr>

  <% @searchresults.each do |r| %>
  <tr>
    <td><%= r.dish_name %></td>
    <td><% if r.country %><%= r.country.name %></td><% end %>
    <td><%= r.difficulty %></td>
    <td><%= r.preperation_time %></td>
    <td><%= ingredient_names(r.ingredients) %></td>
    <td><%= preperation_steps(r.preperations) %></td>
    <td><%= image_tag r.avatar.url(:thumb)%></td>
 </tr>

  <% end %>
</table>

