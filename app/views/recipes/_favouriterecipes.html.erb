<% @favourites.each do |f| %>
  <div class="span3">
    <div class="thumbnail">
     <%= image_tag f.recipe.avatar.url(:myrecipes) %>
    </div>
   <h4><%= link_to f.recipe.dish_name, f %></h4>
   <hr>
   <p><%= truncate f.recipe.description, :length => 90 %></p>
   <%= link_to "Delete From Favourites",  favourite_path(f.id), :confirm => "Are you sure you want to delete this recipe from favourites", :method => :delete %>
   </div>
 <% end %>

  

<div class="container">
 <div class="row">
  <div class="span12">
  <%= will_paginate @favourites, :param_name => 'favourite_page' %>
 </div>
</div>
</div>

